{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Hex Casting",
    "scopeName": "source.hexcasting",
    "patterns": [{ "include": "#pattern" }, { "include": "#escape" }, { "include": "#comment" }],
    "repository": {
        "escape": {
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\bConsideration.*?(?=//|/\\*|{|}|$)"
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.double-slash",
                    "match": "//.*"
                },
                {
                    "name": "comment.block",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "pattern": {
            "patterns": [
                {
                    "name": "entity.name.function",
                    "match": "^\\s*(?!Consideration|//|/\\*)[a-zA-Z0-9+\\-\\./][a-zA-Z0-9:'+\\-\\./ ]*?(?=Reflection|Purification|Distillation|Exaltation|Decomposition|Disintegration|Gambit|Nadir|Zenith|Dstl\\.|:|//|/\\*|$)"
                },
                {
                    "name": "entity.name.function",
                    "match": "\\bII\\b"
                },
                {
                    "name": "entity.name.function",
                    "match": "^\\s*\\b[a-zA-Z]\\b"
                },
                {
                    "name": "variable.parameter",
                    "match": "(?<!Consideration.*)(?<=:)[^/\n]+"
                },
                {
                    "name": "variable.parameter",
                    "match": "(?<=Vector\\s+Reflection\\s+)([+-][XYZ]|Zero)"
                },
                {
                    "name": "support.type",
                    "match": "Reflection|Purification|Distillation|Exaltation|Decomposition|Disintegration|Gambit|Nadir|Zenith|Dstl\\."
                },
                {
                    "name": "punctuation.separator.colon",
                    "match": "(?<!(?:/\\*|//).*):"
                },
                {
                    "name": "punctuation.definition.block",
                    "match": "[{}]"
                }
            ]
        }
    }
}
