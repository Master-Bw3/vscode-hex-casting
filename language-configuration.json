{
    "comments": {
        // symbol used for single line comment
        "lineComment": "//",
        // symbols used for start and end of a block comment
        "blockComment": ["/*", "*/"]
    },
    // symbols used as brackets
    "brackets": [["{", "}"]],
    "autoClosingPairs": [
        ["{", "}"],
        ["/*", "*/"]
    ],
    "onEnterRules": [
        {
            "beforeText": "/\\*",
            "afterText": "\\*/",
            "action": {
                "indent": "indentOutdent",
                // this SHOULD just not append anything, including indentation
                "appendText": "\r"
            }
        }
    ],
    "wordPattern": "(?<=^\\s*Consideration:\\s*)(?!//|/\\*)[a-zA-Z0-9+\\-\\./][a-zA-Z0-9:'+\\-\\./ ]*(?!\\*)|(?<=^\\s*)Consideration:?|(?<=^\\s*)(?!//)[a-zA-Z0-9:'+\\-\\./][a-zA-Z0-9:'+\\-\\./ ]*?(?=//|/\\*)|(?<=^\\s*)(?!//|/\\*)[a-zA-Z0-9+\\-\\./][a-zA-Z0-9:'+\\-\\./ ]*",
    "indentationRules": {
        "increaseIndentPattern": "{",
        "decreaseIndentPattern": "}"
    }
}
