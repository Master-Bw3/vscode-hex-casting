{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hex Casting",
	"scopeName": "source.hexcasting",
	"patterns": [
		{"include": "#escape"},
		{"include": "#comments"}
	],
	"repository": {
		"escape": {
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\b[Cc]onsideration(\\s+\\S+)?\\b"
			}]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "//.*"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		}
	}
}