{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Hex Casting",
	"scopeName": "source.hexcasting",
	"patterns": [
		{"include": "#pattern"},
		{"include": "#escape"},
		{"include": "#comment"}
	],
	"repository": {
		"escape": {
			"patterns": [{
				"name": "constant.character.escape",
				"match": "\\bConsideration.*?(?=//|/\\*|{|}|$)"
			}]
		},
		"comment": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "//.*"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"pattern": {
			"patterns": [
				{
					"name": "entity.name.function",
					"match": "^\\s*(?!Consideration)\\S(.+?(?=Reflection|Purification|Distillation|Exaltation|Decomposition|Disintegration|Gambit|Nadir|Zenith|:)|[^/*\n{}]+)"
				},
				{
					"name": "entity.name.function",
					"match": "\\bII\\b"
				},
				{
					"name": "variable.parameter",
					"match": "(?<=:.*)\\S+"
				},
				{
					"name": "variable.parameter",
					"match": "(?<=Vector\\s+Reflection\\s+)([+-][XYZ]|Zero)"
				},
				{
					"name": "support.type",
					"match": "Reflection|Purification|Distillation|Exaltation|Decomposition|Disintegration|Gambit|Nadir|Zenith"
				},
				{
					"name": "keyword",
					"match": ":"
				}
			]
		}
	}
}